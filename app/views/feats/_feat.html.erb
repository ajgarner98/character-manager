<div id="<%= dom_id feat %>">
  <div class="card"  style="width: 18rem;">
    <ul class="list-group list-group-flush" >
      <li class="list-group-item" id = "details">
        <p>
          <strong>Name:</strong>
          <%= feat.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= feat.description %>
        </p>

        <p>
          <strong>Character:</strong>
          <%= feat.character_id %>
        </p>
      </li>
    </ul>
  </div>

</div>
