<div class="modal fade" id="spellModal" tabindex="-1" role="dialog" aria-labelledby="spellModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="spellModalLabel">Spell Details</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @character_spells.each do |spell| %>
          <%= render 'spells/spell', spell: spell %>
        <% end %>
        <%= form_with(model: [@character, Spell.new]) do |form| %>
          <div>
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name %>
          </div>

          <div>
            <%= form.label :level, style: "display: block" %>
            <%= form.number_field :level %>
          </div>

          <div>
            <%= form.label :character_id, style: "display: block" %>
            <%= form.hidden_field :character_id, value: @character.id %>
          </div>

          <div>
            <%= form.submit %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to 'New Spell', new_character_spell_path(@character), class: 'btn btn-secondary' %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
