<div id="<%= dom_id feat %>">
  <div class="card"  style="width: 18rem;">
    <ul class="list-group list-group-flush" >
      <li class="list-group-item" id = "details">
        <p>
          <strong>Name:</strong>
          <%= feat.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= feat.description %>
        </p>

        <%= link_to "Edit feat", edit_character_feat_path(@character, feat) %>
        <%= button_to 'Delete feat', character_feat_path(@character, feat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>

      </li>
    </ul>
  </div>

</div>
