    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" %>

    <%# seems like you already import this in application.css %>
    <%= stylesheet_link_tag 'custom_styles', media: 'all' %>
    <script>
    // this is causing console error on home page
      document.addEventListener('DOMContentLoaded', function () {
        var levelUpIcon = document.getElementById('levelUpIcon');

        levelUpIcon.addEventListener('click', function () {
          levelUpIcon.classList.add('bounce');
          setTimeout(function () {
            levelUpIcon.classList.remove('bounce');
          }, 1000); 
        });
      });
    </script>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= yield %>
</body>
</html>
