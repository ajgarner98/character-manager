<!-- Modal for Armor -->
<div class="modal fade" id="armorModal" tabindex="-1" role="dialog" aria-labelledby="armorModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!-- Modal content goes here -->
      <div class="modal-header">
        <h5 class="modal-title" id="armorModalLabel">Armor Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Add content related to the armor details here -->
        <%= render 'armors/show', armor: @armor %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

