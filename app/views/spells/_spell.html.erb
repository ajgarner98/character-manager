<div id="<%= dom_id spell %>">
  <div class="card"  style="width: 18rem;">
    <ul class="list-group list-group-flush" >
      <li class="list-group-item" id = "details">
        <p>
          <strong>Name:</strong>
          <%= spell.name %>
        </p>

        <p>
          <strong>Level:</strong>
          <%= spell.level %>
        </p>
        <%= link_to "Edit spell", edit_character_spell_path(@character, spell) %>
        <%= button_to 'Delete spell', character_spell_path(@character, spell), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    </ul>
  </div>

</div>
